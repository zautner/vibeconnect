# Slack – Bot (for posting & reading; use in Bolt)
SLACK_BOT_TOKEN=xoxb-your-bot-token

# Slack – User token (required for search.messages)
SLACK_USER_TOKEN=xoxp-your-user-token

# Slack – Signing secret (from App > Basic Information)
SLACK_SIGNING_SECRET=your-signing-secret

# Optional: Socket Mode app-level token (xapp-...) – if set, no ngrok needed
# SLACK_APP_TOKEN=xapp-your-app-level-token

# Google Gemini (https://aistudio.google.com/apikey)
GEMINI_API_KEY=your-gemini-api-key

# Optional: model name (default gemini-2.0-flash)
# GEMINI_MODEL=gemini-2.0-flash

# Server (for ngrok / Replit)
PORT=3000
